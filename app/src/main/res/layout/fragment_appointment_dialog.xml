<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/list_item_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pertemuan"
            android:textAlignment="center"
            android:textSize="@dimen/subtitle_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/appoin_tv_padding"
            android:weightSum="10">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Pasien"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":" />

            <TextView
                android:id="@+id/tv_patient"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/appoin_tv_padding"
            android:weightSum="10">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Dokter" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":" />

            <TextView
                android:id="@+id/tv_doctor"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/appoin_tv_padding"
            android:weightSum="10">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="No. telepon dokter" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/appoin_tv_padding"
            android:weightSum="10">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Waktu" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/appoin_tv_padding"
            android:weightSum="10">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Keluhan" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":" />

            <TextView
                android:id="@+id/tv_complaints"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_call"
                android:layout_width="@dimen/appoin_btn_width"
                android:layout_height="@dimen/appoin_btn_height"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@android:drawable/stat_sys_vp_phone_call"
                android:drawableTint="@color/white"
                android:text="Telepon Dokter" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="@dimen/appoin_btn_width"
                android:layout_height="@dimen/appoin_btn_height"
                android:layout_below="@+id/btn_call"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/red"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:drawableTint="@color/white"
                android:text="tutup" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>